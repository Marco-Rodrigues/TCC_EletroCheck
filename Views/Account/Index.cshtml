@using Microsoft.AspNetCore.Identity;

@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<h1>Index</h1>

@model List<ApplicationUser>

<h1>Lista de Usuários</h1>

<table>
    <thead>
        <tr>
            <th>Usuário ID</th>
            <th>Nome de Usuário</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Id</td>
                <td>@usuario.UserName</td>
                <td>@usuario.Email</td>
            </tr>
        }
    </tbody>
</table>
